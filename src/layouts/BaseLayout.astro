---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Liam Sheehan â€” Senior Instructional Designer",
  description = "Portfolio showcasing interactive learning experiences, scenario-based training, and evaluation frameworks.",
} = Astro.props;

const siteUrl = "https://liamksheehan.com";
const ogImage = `${siteUrl}/og-image.svg`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-slate-950">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
